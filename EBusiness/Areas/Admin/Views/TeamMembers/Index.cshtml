@model IEnumerable<EBusiness.Models.TeamMember>

@{
    ViewData["Title"] = "Index";
}

    <div class="main-panel">
        <div class="content-wrapper">
            <h1>Index</h1>
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-end mb-2">
                                    <a class="btn btn-success btn-sm" asp-controller="TeamMembers" asp-action="Create" >Add Team member</a>
                            </div>
                            <h4 class="card-title">Team member table</h4>
                            <div class="table-responsive pt-3">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Id)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Position)
                                            </th>
                                            <th>
                                                Image
                                            </th>
                                            <th>
                                                Settings
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Id)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Position)
                                                </td>
                                                <td>
                                                    <img src="~/assets/img/@Html.DisplayFor(modelItem => item.ImageName)">
                                                </td>
                                                <td>
                                                    <a class="btn btn-warning btn-sm" asp-controller="TeamMembers" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                                    <a class="btn btn-danger btn-sm" asp-controller="TeamMembers" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>